{
  "type": "module",
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "types": ["node", "@playwright/test"],
    "target": "es2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "moduleResolution": "Node"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
